<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir cleartext traffic para Railway -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">railway.app</domain>
        <domain includeSubdomains="true">up.railway.app</domain>
        <domain includeSubdomains="true">web-production-10bfc.up.railway.app</domain>
    </domain-config>
    
    <!-- Base config para HTTPS -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
